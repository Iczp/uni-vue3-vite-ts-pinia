{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/commons/utils/*"],
      "@bridge/*": ["src/commons/bridge/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "pinia-plugin-persist-uni", "@types/html5plus"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.js"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
